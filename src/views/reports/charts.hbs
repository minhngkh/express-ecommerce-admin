<div style="width: {{ size }}" ><canvas id="statistics"></canvas></div>

{{! prettier-ignore }}
{{#content "script"}}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const data = {{{ data }}};
        const name = "{{ name }}";
        const type = "{{ type }}";
        (async function() { 
            new Chart(document.getElementById("statistics"), {
            type,
            data: {
                labels: data.map((item) => item.name),
                datasets: [{
                    label: name,
                    data: data.map((item) => item.total),                       
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            stepSize: 1
                        }
                    }]
                }
            }
        })})();
    </script>
{{/content}}