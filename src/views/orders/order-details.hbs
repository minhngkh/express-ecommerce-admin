<!-- Invoice -->
<div class="mx-auto my-4 max-w-screen-xl px-4 sm:my-10 sm:px-6 lg:px-8">
  <!-- Grid -->
  <div
    class="mb-5 flex items-center justify-between border-b border-gray-200 pb-5 dark:border-gray-700"
  >
    <button
      class="inline-flex items-center text-lg text-gray-800 hover:text-teal-600 dark:text-gray-200 dark:hover:text-teal-500"
      @click="window.history.back();"
    >
      <svg
        class="h-4 w-4 flex-shrink-0"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      ><path d="m15 18-6-6 6-6" /></svg>
      Back
    </button>
    <!-- Col -->

    <div class="inline-flex gap-x-4">
      <p class="text-lg">
        <span>#</span>
        <span>{{order.id}}</span>
      </p>
      <p>|</p>
      <p class="text-lg capitalize text-teal-600">{{order.status}}</p>

    </div>
    <!-- Col -->
  </div>
  <!-- End Grid -->

  <!-- Grid -->
  <div class="grid gap-3 border-b pb-4 md:grid-cols-2">
    <div>
      <div class="grid space-y-3">
        <dl class="grid gap-x-3 text-sm sm:flex">
          <dt class="min-w-[150px] max-w-[200px] text-gray-500">
            Shipping details:
          </dt>
          {{#with order.address}}
            <dd class="space-y-2 font-medium text-gray-800 dark:text-gray-200">
              <span class="block font-semibold">{{fullName}}</span>
              <span class="block font-normal">{{phoneNumber}}</span>
              <address class="font-normal not-italic">
                {{#if addressLine2}}
                  <span>{{addressLine 2}}<br /></span>
                {{/if}}
                <span>{{addressLine1}},
                  {{district}},
                  {{cityOrProvince}}<br /></span>
              </address>
            </dd>
          {{/with}}
        </dl>
      </div>
    </div>
    <!-- Col -->

    <div>
      <div class="grid space-y-3">
        <dl class="grid gap-x-3 text-sm sm:flex">
          <dt class="min-w-[150px] max-w-[200px] text-gray-500">
            Status
          </dt>
          <dd class="font-semibold capitalize text-gray-800 dark:text-gray-200">
            {{order.status}}
          </dd>
        </dl>

        <dl class="grid gap-x-3 text-sm sm:flex">
          <dt class="min-w-[150px] max-w-[200px] text-gray-500">
            Order date:
          </dt>
          <dd
            class="text-gray-800 dark:text-gray-200"
            x-text="toLocalDate('{{order.createdAt}}', true)"
          >
          </dd>
        </dl>

        <dl class="grid gap-x-3 text-sm sm:flex">
          <dt class="min-w-[150px] max-w-[200px] text-gray-500">
            Payment method:
          </dt>
          <dd class="text-gray-800 dark:text-gray-200">
            Wire transfer
          </dd>
        </dl>

        <dl class="grid gap-x-3 text-sm sm:flex">
          <dt class="min-w-[150px] max-w-[200px] text-gray-500">
            Currency:
          </dt>
          <dd class="text-gray-800 dark:text-gray-200">
            VND - Vietnamese Dong
          </dd>
        </dl>
      </div>
    </div>
    <!-- Col -->
  </div>
  <!-- End Grid -->

  <!-- Table -->
  <div class="mt-4 w-full">
    {{! <h3 class="mb-2 text-lg font-semibold">Items</h3> }}

    <div
      class="mx-auto mb-6 w-full space-y-4 border-b border-gray-200 pb-6 text-gray-800"
    >
      {{#each items}}
        <div class="flex w-full items-center">
          <div
            class="aspect-[3/2] h-16 overflow-hidden border-gray-200 bg-gray-50 object-cover"
          >
            <img
              src="{{image}}"
              alt="product-image"
              onerror="this.onerror=null; this.src='/images/placeholder/product.webp';"
            />
          </div>
          <div class="flex-grow pb-[1px] pl-3">
            <h6 class="font-semibold text-gray-800">{{name}}</h6>
            <p
              class="text-sm text-gray-700"
              x-text="currencyFormatter.format({{price}})"
            ></p>
            <div class="text-sm text-gray-700">
              <span>&#215; </span>
              <span>{{quantity}}</span>
            </div>
          </div>
          <p
            class="text-gray-700"
            x-text="currencyFormatter.format({{totalPrice}})"
          ></p>
        </div>
      {{/each}}
    </div>

    <div class="flex w-full justify-end">
      <div class="md:w-1/4">
        <div class="mb-2 flex justify-between">
          <p class="font-medium text-gray-700">Subtotal</p>
          <p
            x-text="currencyFormatter.format({{order.total}})"
            class="text-gray-700"
          ></p>
        </div>
        <div class="flex justify-between">
          <p class="font-medium text-gray-700">Shipping</p>
          <p class="text-gray-700">Free</p>
        </div>
        <hr class="my-4" />
        <div class="flex justify-between">
          <p class="text-lg font-bold">Total</p>
          <div class="">
            <p
              x-text="currencyFormatter.format({{order.total}})"
              class="mb-1 text-lg font-bold"
            ></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Table -->

</div>
<!-- End Invoice -->